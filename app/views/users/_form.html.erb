<%= simple_form_for @user do |f| %>
	<%= f.input :email, required: true, autofocus: true %>
	<div class="row">
		<div class="col-xs-6">
			<%= f.input :password %>
		</div>
		<div class="col-xs-6">
			<%= f.input :password_confirmation %>
		</div>
	</div>
	<%= f.input :admin, inline_label: 'Is admin?' %>
	<%= f.input :is_approved, inline_label: 'Is approved?' %>
	<%= f.input :read_only, inline_label: 'Read only access?' %>

	<%= f.button :submit, "Submit", :class => "btn btn-success" %>
<% end %>
